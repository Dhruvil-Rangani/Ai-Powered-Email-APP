# Server
PORT=5000

# IMAP (incoming) — your Dovecot/Postfix host and port
IMAP_HOST=mail.example.com
IMAP_PORT=993

# SMTP (outgoing) — your SMTP relay host, port, and credentials
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-smtp-username
SMTP_PASS=your-smtp-password

# Whether to log extra date-filter debug info
DEBUG_DATES=false

# Virtual mailbox settings (for creating Maildirs)
VIRTUAL_DOMAIN=example.com
VMAIL_ROOT=/var/mail/vhosts

# OpenAI
OPENAI_API_KEY=sk-<your-openai-key>
OPENAI_MODEL=gpt-4o
OPENAI_MAX_TOKENS=1024

# JWT access token settings
JWT_SECRET=your-jwt-secret
JWT_EXPIRES=15m

# Refresh token lifetime (in days)
REFRESH_EXPIRES_DAYS=36500

# Database
DATABASE_URL="postgresql://USER:PASSWORD@HOST:PORT/DATABASE?sslmode=require"
