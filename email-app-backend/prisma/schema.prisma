generator client {
  provider = "prisma-client-js"
  output   = "./prisma/generated/client"
}


datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model EmailTag {
  id        String   @id @default(cuid())
  messageId String
  tag       String
  createdAt DateTime @default(now())
}

model Tag {
  id        Int      @id @default(autoincrement())
  label     String
  emailId   String
  createdAt DateTime @default(now())
}

